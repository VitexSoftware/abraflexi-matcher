{
    "$schema": "https://raw.githubusercontent.com/VitexSoftware/php-vitexsoftware-multiflexi-core/refs/heads/main/multiflexi.app.schema.json",
    "schemaVersion": "3.0.0",
    "uuid": "67bf1b78-6885-4169-984c-84b1b2761429",
    "name": {
        "en": "Recieved invoices Matcher",
        "cs": "Recieved invoices Matcher"
    },
    "description": {
        "en": "Match recieved invoices with outcoming payments",
        "cs": "Match recieved invoices with outcoming payments"
    },
    "tags": [
        "AbraFlexi",
        "Matcher",
        "Invoicing"
    ],
    "homepage": "https://github.com/VitexSoftware/abraflexi-matcher/",
    "executable": "abraflexi-matcher-in",
    "environment": {
        "RESULT_FILE": {
            "type": "string",
            "description": {
                "en": "write output json data to",
                "cs": "write output json data to"
            },
            "defval": "recieved_invoices_matcher_report.json",
            "required": false,
            "category": "Other"
        },
        "EASE_LOGGER": {
            "type": "string",
            "description": {
                "en": "write log messages using",
                "cs": "write log messages using"
            },
            "defval": "console|syslog",
            "required": false,
            "category": "Behavior"
        },
        "LANG": {
            "type": "set",
            "description": {
                "en": "Locale for this application",
                "cs": "Locale for this application"
            },
            "defval": "cs_CZ",
            "required": false,
            "options": [
                "cs_CZ",
                "en_US"
            ],
            "category": "Other"
        },
        "ABRAFLEXI_COMPANY": {
            "type": "string",
            "description": "",
            "defval": "demo_de",
            "required": true,
            "category": "API"
        },
        "ABRAFLEXI_LOGIN": {
            "type": "string",
            "description": {
                "en": "AbraFlexi Login",
                "cs": "AbraFlexi Login"
            },
            "defval": "winstrom",
            "required": true,
            "category": "API"
        },
        "ABRAFLEXI_PASSWORD": {
            "type": "password",
            "description": {
                "en": "AbraFlexi password",
                "cs": "AbraFlexi password"
            },
            "defval": "winstrom",
            "required": true,
            "category": "API"
        },
        "ABRAFLEXI_URL": {
            "type": "string",
            "description": {
                "en": "AbraFlexi Server URI",
                "cs": "AbraFlexi Server URI"
            },
            "defval": "https://demo.flexibee.eu:5434",
            "required": true,
            "category": "API"
        },
        "MATCHER_PULL_BANK": {
            "type": "bool",
            "description": {
                "en": "Pull bank statements before matching",
                "cs": "Pull bank statements before matching"
            },
            "defval": false,
            "required": false,
            "category": "Other"
        },
        "MATCHER_DAYS_BACK": {
            "type": "string",
            "description": {
                "en": "How far into the past to match invoices",
                "cs": "How far into the past to match invoices"
            },
            "defval": "365",
            "required": false,
            "category": "Other"
        }
    }
}
